{
  "name": "zaria-builder-text-edition",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n api,web -c magenta,yellow \"npm run dev -w @zaria/api\" \"npm run dev -w @zaria/web\"",
    "dev:legacy": "next dev",
    "build": "npm run build -w @zaria/shared && npm run build -w @zaria/api && npm run build -w @zaria/web",
    "build:legacy": "next build",
    "start:legacy": "next start",
    "lint": "npm run lint -ws",
    "lint:legacy": "eslint",
    "typecheck": "npm run typecheck -ws",
    "prisma:generate": "npm run prisma:generate -w @zaria/api",
    "prisma:migrate": "npm run prisma:migrate -w @zaria/api"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "convex": "^1.31.6",
    "next": "16.1.3",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "tailwindcss": "^4",
    "typescript": "^5.9.3"
  }
}
